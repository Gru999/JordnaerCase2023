@page
@model JordnærCase2023.Pages.Events.GetAllEventsModel
@{
    ViewData["Titel"] = "GetAllEvents";
}

<h1>Current Events</h1>

<form method="get">
    Search <input type="text" asp-for="FilterCriteria" />
    <input type="submit" value="Filter" />
</form>
<p></p>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="@Model.Events" class="control-label"></label>
        <select name="DateSort" class="form-control">
            <option value="">Sort for Date</option>
            <option value="UEvent">Upcoming Events</option>
            <option value="NEvent">New Events</option>
            <option value="OEvent">Old Events</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Sort" class="btn btn-primary" />
    </div>
</form>

<p>
    <a asp-page="CreateEvent">Create Event</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Event Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                DateFrom
            </th>
            <th>
                DateTo
            </th>
            <th>
                EventImg
            </th>
            <th>
                MaxAtt.
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Events.Count() != 0)
        {
            @foreach (var item in Model.Events)
            {
                <tr>
                    <td>
                        @item.EventId
                    </td>
                    <td>
                        @item.EventName
                    </td>
                    <td>
                        @item.EventDescription
                    </td>
                    <td>
                        @item.EventDateFrom
                    </td>
                    <td>
                        @item.EventDateTo
                    </td>
                    <td>
                        <img src="~/images/@item.EventImg" width="60" height="60" />
                    </td>
                    <td>
                        @item.EventMaxAttendance
                    </td>
                    <td>
                        <a asp-page="UpdateEvent" asp-route-id="@item.EventId">Update</a> |
                        <a asp-page="DeleteEvent" asp-route-id="@item.EventId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>