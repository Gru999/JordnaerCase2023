@page
@model JordnærCase2023.Pages.Events.CreateEventModel
@{
    ViewData["Title"] = "Create Event";
}


<h1>Create Event</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="@Model.Event.EventId" class="control-label"></label>
                <input asp-for="@Model.Event.EventId" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.EventName" class="control-label"></label>
                <input asp-for="@Model.Event.EventName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.EventDescription" class="control-label"></label>
                <input asp-for="@Model.Event.EventDescription" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.EventDateFrom" class="control-label"></label>
                <input asp-for="@Model.Event.EventDateFrom" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.EventDateTo" class="control-label"></label>
                <input asp-for="@Model.Event.EventDateTo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Photo" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="@Model.Photo" class="custom-file-input form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.EventMaxAttendance" class="control-label"></label>
                <input asp-for="@Model.Event.EventMaxAttendance" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>