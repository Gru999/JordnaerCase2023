@page
@model JordnærCase2023.Pages.Events.UpdateEventModel
@{
    ViewData["Title"] = "Update Event";
}

<h1>Update Event</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
           @* <input asp-for="@Model.Event.EventId" type="hidden" />*@
            <div class="form-group">
                <label asp-for="@Model.Event.EventId" class="control-label"></label>
                <input type="hidden" asp-for="@Model.Event.EventId" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.EventName" class="control-label"></label>
                <input asp-for="@Model.Event.EventName" class="form-control" />
                <span asp-validation-for="Event.EventName" class="text-danger"></span>
            </div>         
            <div class="form-group">
                <label asp-for="@Model.Event.EventDescription" class="control-label"></label>
                <input asp-for="@Model.Event.EventDescription" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.EventDateFrom" class="control-label"></label>
                <input asp-for="@Model.Event.EventDateFrom" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.EventDateTo" class="control-label"></label>
                <input asp-for="@Model.Event.EventDateTo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.EventImg" class="control-label"></label>
                <input asp-for="@Model.Event.EventImg" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.EventMaxAttendance" class="control-label"></label>
                <input asp-for="@Model.Event.EventMaxAttendance" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save updated Event" class="btn btn-primary" />
            </div>
            @*<div class="formgroup">
                <input type="submit" value="Delete Event" asp-page-handler="Delete" class="btn btn-primary" />
            </div>*@
            <div>
                <a asp-page="GetAllEvents">Cancel</a>
            </div>
        </form>
    </div>
</div>
