@page
@model JordnærCase2023.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<h1>Please Login</h1>

@Model.Message
<form method="post">
    <table>
        <tr>
            <td>Email</td>
            <td><Input type="text" asp-for="@Model.Email" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><Input type="password" asp-for="@Model.Password" /></td>
        </tr>
        <tr>
            <td>&nbsp</td>
            <td><Input type="submit" value="Login" /></td>
        </tr>
        <a asp-page="/Members/CreateMember">Create a new user</a>
    </table>
</form>
