@page
@model JordnærCase2023.Pages.Shifts.UpdateModel
@{
    ViewData["Title"] = "Rediger vagt";
}

<h1>Rediger vagt</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.ShiftUpdate.ShiftID" class="control-label">ID</label>
                <input asp-for="@Model.ShiftUpdate.ShiftID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShiftUpdate.MemberID" class="control-label" hidden></label>
                <input asp-for="@Model.ShiftUpdate.MemberID" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShiftUpdate.ShiftType" class="control-label">Vagttype</label>
                <input asp-for="@Model.ShiftUpdate.ShiftType" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShiftUpdate.DateFrom" class="control-label">Startdato</label>
                <input asp-for="@Model.ShiftUpdate.DateFrom" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShiftUpdate.DateTo" class="control-label">Slutdato</label>
                <input asp-for="@Model.ShiftUpdate.DateTo" class="form-control" />
            </div>
            <div class="form-group" style="margin-top:5px;">
                <button type="button" class="btn btn-outline-dark" onclick="window.history.back();">Tilbage</button>
                <input type="submit" value="Rediger" class="btn btn-primary" /> 
            </div>
        </form>
    </div>
</div>