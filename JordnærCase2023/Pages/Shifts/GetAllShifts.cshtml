@page
@using JordnærCase2023.Interfaces
@inject IShiftTypeService shiftTypeService
@model JordnærCase2023.Pages.Shifts.GetAllShiftsModel
@{
    ViewData["Title"] = "Get All Shifts";
}

<h1>Get All Shifts</h1>

<div style="display:flex; justify-content: space-between;">
<form method="get">
    Search <input type="text" asp-for="@Model.FilterCriteria" />
    <input type="submit" value="Filter" />
</form> 

<a asp-page="CreateShift" class="btn btn-primary">Create a new Shift</a>
</div>

<table class="table">
    <thead>
        <th>
            Shift_ID
        </th>
        <th>
            Member_ID
        </th>
        <th>
            Shift_Type
        </th>
        <th>
            Date_From
        </th>
        <th>
            Date_To
        </th>
        @if(Model.LoggedMember != null)
        {
            <th></th>
        }
        <th></th>
        <th></th>
    </th>
    <tbody>
        @if (Model.Shifts.Count() != 0)
        {
            @foreach (var item in Model.Shifts)
            {
                <tr>
                    <td>
                        @item.ShiftID
                    </td>
                    <td>
                        @item.MemberID
                    </td>
                    <td>
                        @shiftTypeService.GetShiftTypeById(item.ShiftType).Name
                    </td>
                    <td>
                        @item.DateFrom
                    </td>
                    <td>
                        @item.DateTo
                    </td>
                    
                        @if(Model.LoggedMember != null && item.MemberID == null)
                        {
                        <td>
                            <a asp-page="JoinShift" asp-route-shiftId="@item.ShiftID" asp-route-memberId="@Model.LoggedMember.Id">Join Shift</a>
                        </td>
                        }
                        
                        @if (Model.LoggedMember != null && item.MemberID != null)
                        {
                        <td>
                            <a asp-page="RemoveShift" asp-route-shiftId="@item.ShiftID" asp-route-url="/Shifts/GetAllShifts">Remove Shift</a>
                        </td>
                        }

                    <td><a asp-page="UpdateShift" asp-route-shiftId="@item.ShiftID">Update</a></td>
                    <td><a asp-page="DeleteShift" asp-route-shiftId="@item.ShiftID">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>