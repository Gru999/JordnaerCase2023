@page
@model JordnærCase2023.Pages.Shifts.GetAllShiftsModel
@{
    ViewData["Title"] = "Get All Shifts";
}

<h1>Get All Shifts</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.ShiftGetAll.ShiftID" class="control-label"></label>
                <input asp-for="@Model.ShiftGetAll.ShiftID" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShiftGetAll.MemberID" class="control-label"></label>
                <input asp-for="@Model.ShiftGetAll.MemberID" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShiftGetAll.ShiftType" class="control-label"></label>
                <input asp-for="@Model.ShiftGetAll.ShiftType" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
