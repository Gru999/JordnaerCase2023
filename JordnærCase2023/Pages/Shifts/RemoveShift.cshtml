@page
@model JordnærCase2023.Pages.Shifts.RemoveShiftModel
@{
    ViewData["Title"] = "Join Shift";
}

<h1>Join Shift</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            
            <input asp-for="@Model.Url" class="form-control" hidden />

            <div class="form-group">
                <label asp-for="@Model.Shift.ShiftID" class="control-label"></label>
                <input asp-for="@Model.Shift.ShiftID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Shift.MemberID" class="control-label"></label>
                <input asp-for="@Model.Shift.MemberID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Shift.ShiftType" class="control-label"></label>
                <input asp-for="@Model.Shift.ShiftType" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Shift.DateFrom" class="control-label"></label>
                <input asp-for="@Model.Shift.DateFrom" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Shift.DateTo" class="control-label"></label>
                <input asp-for="@Model.Shift.DateTo" class="form-control" readonly />
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-outline-dark" onclick="window.history.back();">Back</button>
                <input type="submit" value="Remove user from shift" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
