@page
@model JordnærCase2023.Pages.Members.AllMembersModel
@{
    ViewData["Title"] = "Medlemmer";
}

<h1>Medlemmer</h1>

<div style="display:flex; justify-content:space-between">
<form method="get">
    <input type="text" asp-for="@Model.FilterCriteria" placeholder="Søg efter navn..."/>
    <input type="submit" value="Filter"/>
</form>

<a asp-page="CreateMember" class="btn btn-primary">Opret nyt medlem</a>
</div>

<table class="table">
    <tr>
        <th></th>
        <th>ID</th>
        <th>Navn</th>
        <th>Tlf.</th>
        <th>E-mail</th>
        <th></th>
        <th></th>
    </tr>
    @if(Model.Members.Count > 0){
        @foreach (var item in Model.Members)
        {
            <tr>
                <td><img src="~/Images/Members/@item.Image" class="rounded-circle" height="75" width="75"/></td>
                <td>@item.Id</td>
                <td>
                    <a asp-page="MemberPage" asp-route-memberId="@item.Id">@item.Name</a>
                </td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>
                    <a asp-page="UpdateMember" asp-route-memberId="@item.Id">Rediger</a>
                </td>
                <td>
                    <a asp-page="DeleteMember" asp-route-memberId="@item.Id">Slet</a>
                </td>
            </tr>
        }
    }
</table>